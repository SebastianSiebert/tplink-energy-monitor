<div class="x_panel small tile">
    <div class="x_title">
        <h2>
            <strong>
                {{#if title}}
                    {{title}}
                {{else}}
                    TITLE MISSING
                {{/if}}
            </strong>
        </h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content small">
        <h1>
            <span id={{tileId}}>-{{#if unit}}</span> <small>{{unit}}</small>{{/if}}</span>
        </h1>
    </div>
</div>
