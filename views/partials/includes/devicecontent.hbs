<div class="page-header">
    <div class="row">
        <div class="col-sm-8">
            <div class="device-list-small">
                <ul class="list-inline">
                    {{#each devices}}
                        <li class="{{this.deviceId}}">
                            <a title="Device Id: {{this.deviceId}}" href="/{{this.deviceId}}">
                                <i class="fa fa-plug"></i>
                                {{this.alias}}
                            </a>
                        </li>
                    {{else}}
                        <li>
                            <a href="/">
                                <i class="fa fa-info"></i>
                                no devices discovered yet
                            </a>
                        </li>
                    {{/each}}
                </ul>
            </div>
            <h1>
                <i class="fa fa-plug"></i> {{device.alias}}
            </h1>
        </div>
        <div class="col-sm-4">
            <div id="connection-error" class="alert alert-danger" style="display:none">Connection lost. Attempting to re-establish...</div>
        </div>
    </div>
</div>

<div class="row">

    <div class="col-md-4 col-sm-4 col-xs-12">
       {{> common/gauge title="Realtime Usage"}}
    </div>

    <div class="col-md-8 col-sm-8 col-xs-12">
        {{> common/rttchart title="Realtime Trend"}}
    </div>

</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        {{> common/chart
            title="Logged Usage"
            showLast=true
            lastId="lastsession"
            unit="kWh"
            chartId="logged-usage-chart"
        }}
    </div>

</div>

<div class="row">

    <div class="col-md-4 col-sm-4 col-xs-12 col-lg-4 col-xl-2">
       {{> common/buttontile title="Plug state"}}
    </div>

    <div class="col-md-4 col-sm-4 col-xs-12 col-lg-4 col-xl-2">
        {{> common/unittile
                title="Uptime"
                tileId="uptime"
        }}
    </div>

    <div class="col-md-4 col-sm-4 col-xs-12 col-lg-4 col-xl-2">

    </div>

    <div class="col-md-4 col-sm-4 col-xs-12 col-lg-4 col-xl-2">
        {{> common/unittile
                title="Total today"
                tileId="total-day"
                unit="kWh"
        }}
    </div>

    <div class="col-md-4 col-sm-4 col-xs-12 col-lg-4 col-xl-2">
        {{> common/unittile
                title="Monthly average"
                tileId="avg-month"
                unit="kWh"
        }}
    </div>

    <div class="col-md-4 col-sm-4 col-xs-12 col-lg-4 col-xl-2">
        {{> common/unittile
                title="Total this month"
                tileId="total-month"
                unit="kWh"
        }}
    </div>

</div>

<div class="row">

    <div class="col-md-8 col-sm-8 col-xs-12">
        {{> common/chart
            title="Last 30 days"
            showTotal=true
            totalAmount="30total"
            unit="kWh"
            chartId="du-chart"
        }}
    </div>

    <div class="col-md-4 col-sm-4 col-xs-12">
        {{> common/chart
                title="Last 12 months"
                showTotal=true
                totalAmount="monthstotal"
                unit="kWh"
                chartId="mu-chart"
        }}
    </div>

</div>